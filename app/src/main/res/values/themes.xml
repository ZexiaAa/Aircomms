<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Aircomms" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>


        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="colorAccent">@color/dark_black</item>


        <!-- Switch button -->
        <item name="colorControlActivated">@color/black</item>
        <item name="colorSwitchThumbNormal">@color/dark_cardView</item>
        <item name="trackTint">@color/dark_black</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>


    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/light_gray</item>
    </style>

    <style name="Theme.Aircomms.CustomTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/bg</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorAccent">@color/dark_black</item>
     <!--   <item name="android:windowAnimationStyle">@style/ActivityAnim</item>-->
    </style>

    <style name="PoppinsTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/poppins_regular</item>

    </style>

    <style name="CustomScrollbar">
        <item name="android:scrollbarThumbHorizontal">@drawable/custom_scrollbar</item>
        <item name="android:scrollbarTrackHorizontal">@android:color/transparent</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <!--<style name="ActivityAnim" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_in</item>
    </style>-->

</resources>